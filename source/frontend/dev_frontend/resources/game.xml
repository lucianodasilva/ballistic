<package>

  <effect name="square.effect">
    <vertex>
      <![CDATA[
      #version 330 core
      
      layout (location = 0) in vec3 in_position;
      
      uniform vec4        effect_diffuse;
      uniform vec4        effect_specular;
      uniform mat4        effect_t_model;
      uniform mat4        effect_t_view;
      uniform mat4        effect_t_proj;
      uniform mat4        effect_t_mvp;

      out vec4            var_color;

      void main () {

        var_color = effect_diffuse;

        mat4 mvp = effect_t_proj * effect_t_view;
        gl_Position = mvp * vec4 (in_position, 1.0);
      }
      
      ]]>
    </vertex>
    <fragment>
      <![CDATA[
      #version 330 core

      in vec4 var_color;
      out vec4 out_color;
      
      void main () {
        out_color = var_color;
      }
      
      ]]>
    </fragment>
  </effect>

  <material name="square.material" diffuse="0.0, 1.0, 1.0, 1.0" opaque="true" effect="square.effect" />

  <mesh name="square.mesh">
    <!--     <position>
      0, -0.5, 0.0,
      0.5, 0.5, 0.0,
      -0.5, 0.5, 0.0
    </position> -->
    <position>
      0, 0.5, 0,
      0.5, -0.5, 0,
      -0.5, -0.5, 0
    </position>
    <!--<uv>
      0.0, 0.0,
      1.0, 0.0,
      1.0, 1.0
    </uv>-->
    <index>
      0, 1, 2
    </index>
  </mesh>

  <entity name="camera.entity">
    <properties>
      <position type="vec3" value="0, 0, -1"/>
      <target   type="vec3" value="0,0,0"/>
      <up       type="vec3" value="0, 1, 0"/>
    </properties>
    <components>
      <graphics_camera>
        <!--
        <projection value="ortho"/>
        <left   value="-10"/>
        <right  value="10"/>
        <top    value="10"/>
        <bottom value="-10"/>
        <near   value="-10"/>
        <far    value="100"/>
        -->
        <projection value="perspective"/>
        <fovy   value="0.78539816339744830961566084581988"/>
        <near   value="1"/>
        <far    value="100"/>
      </graphics_camera>
      <orbit_cam/>
    </components>
  </entity>

  <entity name="rotating_square.entity">
    <properties>
      <position type="vec3" value="0, 0, 0"/>
      <material type="res"  value="square.material"/>
      <mesh     type="res"  value="square.mesh"/>
    </properties>
    <components>
      <graphics_visual/>
    </components>
  </entity>

</package>