
<package>
  
  <effect name="square.effect">
    <vertex> 
      <![CDATA[
      
			layout (location = 0) in vec3	in_position;
			uniform vec4					effect_diffuse;

			out vec4						var_color;

			void main () {
				gl_Position.xyz = in_position;
				gl_Position.w = 1.0;
				var_color = effect_diffuse;
			}
      
      ]]> 
    </vertex>
    <fragment> 
      <![CDATA[
    
      in vec4 var_color;
      out vec4 out_color;
			
      void main () {
        out_color = var_color;
      }
      
      ]]> 
    </fragment>
  </effect>
  
  <material name="square.material" diffuse="1.0, 1.0, 1.0, 1.0" opaque="true" effect="square.effect" />
  
  <mesh name="square.mesh">
    <position>
      -1.0, -1.0, 0.0,
      1.0, -1.0, 0.0,
      1.0, 1.0, 0.0,
      -1.0, 1.0, 0.0
    </position>
    <uv>
      0.0, 0.0,
      1.0, 0.0,
      1.0, 1.0,
      0.0, 1.0
    </uv>
    <index>
      0, 1, 3,
      3, 1, 2
    </index>
  </mesh>

  <entity name="camera.entity">
    <properties>
      <position type="vec3" value="0,0,-1"/>
      <target   type="vec3" value="0,0,0"/>
      <up       type="vec3" value="0, 1, 0"/>
    </properties>
    <components>
      <camera>
        <projection type="text" value="ortho"/>
        <left   type="real" value="-1"/>
        <right  type="real" value="1"/>
        <top    type="real" value="1"/>
        <bototm type="real" value="-1"/>
        <near   type="real" value="-1"/>
        <far    type="real" value="10"/>
      </camera>
    </components>
  </entity>

	<entity name="rotating_square">
		<properties>
			<position type="int" value="12"/>
      <material type="res" value="square.material"/>
      <mesh     type="res" value="square.mesh"/>
		</properties>
		<components>
      <visual/>
		</components>
	</entity>

</package>